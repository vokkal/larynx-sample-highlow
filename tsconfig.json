{
  "compilerOptions": {
    "outDir": "build/",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es6",
    "types": ["node"],
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "rootDir": ".",
    "lib": ["es2015", "es2015.promise", "dom"]
  },
  "include": [
    "./src/index.ts",
    "./src/*/**.ts"
  ],
  "exclude": [
    "lib",
    "build"
  ]
}